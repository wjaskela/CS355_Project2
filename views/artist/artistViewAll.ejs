<%- include("../includes/header.ejs", {title:"Artists - View All"}); %>

<h1>Artists</h1>

<br />

<table border="1">
    <tr><th>Band Name</th>
        <th>Singer Name</th>
        <th>Genre</th>
        <th>Website</th>
        <th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td align="center"><a href="/artist/?band_name=<%= result[i].band_name %>"><%= result[i].band_name
                %></a></td>
        <td align="center"><%= result[i].singer_name %></td>
        <td align="center"><%= result[i].genre %></td>
        <td align="center"><a href="<%= result[i].website %>"></a><%= result[i].website %></td>
        <td align="center">
            <button onclick="event.preventDefault();window.location
                    .href='/artist/edit2/?band_name=<%= result[i].band_name %>'">Edit</button>
            <form action="/artist/delete/" style="display:inline;">
                <input type="hidden" name="band_name" id="band_name" value="<%= result[i].band_name %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>

<br />
<br />
<form action="/artist/add">
    <input type="submit" value="Add New Artist"/>
</form>

